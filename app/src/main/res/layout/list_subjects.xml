<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/list_number_votes"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Subject"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/list_player_name"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/list_number_votes" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/roboto_black"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_corners_black_buttons"
        android:drawableStart="@drawable/play_icon"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/list_btn_vote"
        android:layout_toEndOf="@+id/list_player_name"/>
</RelativeLayout>